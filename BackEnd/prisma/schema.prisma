generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Medicine {
  id           Int      @id @default(autoincrement())
  name         String
  type         String
  quantity     Int
  manufacturer String
  expiryDate   DateTime
  batchNumber  String
  pricePerStrip Float
  pricePerPack Float
  pricePerUnit Float? 
  description  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

