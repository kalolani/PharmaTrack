generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Medicine {
  id                  Int       @id @default(autoincrement())
  name                String
  type                MedicineType
  costPerStrip        Float?    // Applicable only for tablets
  costPerPack         Float?    // Applicable only for tablets
  cost                Float?    // Applicable for other medicine types
  percentageStrip     Float?    // Markup percentage for strip selling price
  percentagePack      Float?    // Markup percentage for pack selling price
  sellingPriceStrip   Float?    // Selling price per strip (calculated)
  sellingPricePack    Float?    // Selling price per pack (calculated)
  sellingPrice        Float?    // Selling price for other medicine types (calculated)
  expiryDate          DateTime
  batchNumber         String
  manufacturer        String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

enum MedicineType {
  tablet
  syrup
  cosmetics
  others
}




model Sale {
  id          Int      @id @default(autoincrement())
  medicineName String  @default("Unknown") // Set default value here
  medicineId  Int
  quantity    Int
  unitType    String
  sellingPrice  Float   @default(0)
  createdAt   DateTime @default(now())

  medicine    Medicine @relation(fields: [medicineId], references: [id])
}

